{% extends "base.html.twig" %}

{% block title %}PNJ pour {{ place.title }}{% endblock %}

{% block header_title %}
    {# the header menu with title #}
    <nav style="float: right">
        {{ include('place/actions.html.twig', {vertex:place}) }}
    </nav>   
    {% block header_big_title %}PNJ pour {{ place.title }}{% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('multiavatar/multiavatar.min.js') }}"></script>
    <script>
        var avatarSample = document.querySelectorAll('[data-avatar]')

        for (const sample of avatarSample) {
            sample.innerHTML = multiavatar(sample.dataset.avatar)
            // event for sending an avatar
            sample.parentNode.addEventListener("click", function (e) {
                document.getElementById('profile_on_the_fly_svg').value = sample.innerHTML
                document.getElementById('profile_on_the_fly_name').value = sample.dataset.avatar
                document.getElementById('profile_on_the_fly_template').value = '{{ place.npcTemplate }}'

                let onTheFly = document.querySelector('form[name=profile_on_the_fly]')
                let data = new FormData(onTheFly)
                fetch(onTheFly.action, {
                    method: 'post',
                    body: data,
                    redirect: 'manual'
                }).then(function (response) {
                    console.log('ok');
                }).catch((error) => {
                    console.error(error);
                })
            })
        }
    </script>
{% endblock %}

{% block content %}
    {{ form(form) }}
    {% for label, gender in listing %}
        <section class="pure-g quick-npc">
            {% for name in gender %}
                <div class="pure-u-1-8">
                    <figure data-avatar="{{ name }}"></figure>
                    <a href="{{ path('app_npcgenerator_create', {title: name}) }}">{{ name }}</a>
                </div>
            {% endfor %}
        </section>
    {% endfor %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .quick-npc {
            text-align: center;
        }
        .quick-npc *[data-avatar] + a {
            padding-bottom: 1em;
            display: block;
        }
        form[name=profile_on_the_fly] {
            display: none;
        }
    </style>
{% endblock %}