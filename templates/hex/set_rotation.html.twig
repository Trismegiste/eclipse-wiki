{% extends "base.html.twig" %}
{% form_theme form _self %}

{% block title %}Edition des rotations{% endblock %}
{% block header_title %}{{ block('title') }}{% endblock %}

{% block content %}
    {{ form(form) }}
{% endblock %}


{% block _form_collection_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _form_collection_entry_row %}
    <div class="tile-rotation">
        <div class="pure-g">
            <div class="pure-u-1-2 right-text">
                <label>120° {{ form_widget(form.rotation[2]) }}</label>
            </div>
            <div class="pure-u-1-2">
                <label>{{ form_widget(form.rotation[1]) }} 60°</label>
            </div>
            <div class="pure-u-1-3 right-text middle">
                <label>180° {{ form_widget(form.rotation[3]) }}</label>
            </div>
            <div class="pure-u-1-3 hexagon">{{ include ('hex/tile/' ~ form.vars.data.filename) }}</div>
            <div class="pure-u-1-3 middle">
                <label style="text-align: left;">{{ form_widget(form.rotation[0]) }} 0°</label>
            </div>
            <div class="pure-u-1-2 right-text">
                <label>240° {{ form_widget(form.rotation[4]) }}</label>
            </div>
            <div class="pure-u-1-2">
                <label>{{ form_widget(form.rotation[5]) }} 300°</label>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .tile-rotation .hexagon {
            text-align: center;
        }
        .tile-rotation {
            padding-top: 0.5em;
            border: 2px solid #ccc;
            margin-bottom: 2em;
        }
        .tile-rotation .middle label {
            margin-top: 5em;
        }
        .tile-rotation label {
            margin-left: 2em;
            margin-right: 2em;
        }
        .right-text label {
            text-align: right;
        }
    </style>
{% endblock %}