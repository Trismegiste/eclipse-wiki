        section {
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        section img {
            margin: auto;
            width: 100vw;
            height: 100vh;
            object-fit: contain;
        }
        img.portrait {
            transform: rotate(90deg);
