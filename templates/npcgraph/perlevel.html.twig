{% extends "base.html.twig" %}
{% form_theme(form) _self %}

{% block title %}Editer {{ app.current_route_parameters.propertyName }} au niveau {{ app.current_route_parameters.level }}{% endblock %}
{% block header_title %}
    <div style="float: right">
        <a href="{{ path('app_npcgraphcrud_edit') }}" title="Ã‰diter le graphe">
            <i class="icon-edit"></i>
        </a>
    </div>
    {{ block('title') }}
{% endblock %}

{% block content %}
    {{ form(form) }}
{% endblock %}

{% block _tree_level_edit_widget %}
    {{ form_widget(form._token) }}
    {% set buttonRender = form_row(form.save) %}
    <div class="pure-g">
        {% for child in form %}
            {% if not child.rendered %}
                <div class="pure-u-1-5 form-widget">
                    <h2>{{ form_label(child) }}</h2>
                    {{ form_widget(child) }}
                </div>
            {% endif %}
        {% endfor %}
    </div>
    {{ buttonRender|raw }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/multicheckbox.css') }}"/>
    <style>
        fieldset h2 {
            margin: 0 0 0.3em;
        }
    </style>
{% endblock %}

{% block sidebar %}
    {% set current_level = app.current_route_parameters.level %}
    {% set current_prop = app.current_route_parameters.propertyName %}
    {% set properties = form.vars.property_names %}
    <nav class="pure-menu">
        <ul class="pure-menu-list">
            {% for item in properties %}
                <li class="pure-menu-item">
                    <a href="{{ path(app.current_route, {propertyName: item, level: current_level}) }}" class="pure-menu-link">
                        {{ item }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    <nav class="pure-menu">
        <ul class="pure-menu-list">
            <li class="pure-menu-item">
                <a href="{{ path(app.current_route, {propertyName: current_prop, level: current_level+1 }) }}" class="pure-menu-link">
                    <i class="icon-angle-circled-down"></i>
                    Descendre d'un niveau
                </a>
            </li>
            {% if current_level > 0 %}
                <li class="pure-menu-item">
                    <a href="{{ path(app.current_route, {propertyName: current_prop, level: current_level-1 }) }}" class="pure-menu-link">
                        <i class="icon-angle-circled-up"></i>
                        Monter d'un niveau
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}