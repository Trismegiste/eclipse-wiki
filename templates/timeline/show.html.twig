{% extends "vertex/show.html.twig" %}

{% block header_title %}
    <nav style="float: right">
        {{ include('timeline/actions.html.twig') }}
    </nav>   
    {{ vertex.title }}
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-3-4">
            {{ wiki(vertex.content) }}
        </div>
        <div class="pure-u-1-4" x-data="partition('{{ path('app_timelinecrud_partition', {pk: vertex.pk})}}')">
            <div style="text-align: center">
                <i class="icon-spin3 animate-spin big-waiting"></i>
            </div>
        </div>
    </div>
{% endblock %}

{% block info %}
    <a href="{{ path('app_timelinecrud_pin', {pk: vertex.pk}) }}" class="pure-button"><i class="icon-pin"></i>Ã‰pingler ce scenario</a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .parsed-wikitext ul strike {
            text-decoration: none;
            opacity: 0.3;
        }
        .parsed-wikitext ul strike:hover {
            opacity: 1;
            color: darkgreen;
        }
        .parsed-wikitext ul strike:before {
            content: '\f301';
            font-family: "iconfont";
            color: green;
            padding-right: 0.3em;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module">
        Alpine.data('partition', (url) => ({
                async init() {
                    const resp = await fetch(url)
                    this.$el.innerHTML = await resp.text()
                }
            }))
    </script>
{% endblock %}