    <style>
        .parsed-wikitext ul strike {
            text-decoration: none;
            opacity: 0.3;
        }
        .parsed-wikitext ul strike:hover {
            opacity: 1;
            color: darkgreen;
        }
        .parsed-wikitext ul strike:before {
            content: '\f301';
            font-family: "iconfont";
