{% extends "base.html.twig" %}

{% block title %}Création d'un Scénario{% endblock %}

{% block header_title %}Création d'un Scénario{% endblock %}

{% block content %}
    {% if form.vars.data is not empty %}
        <section>
            <h2>Peut-être voulez-vous créer</h2>
            <div class="pure-g">
                <div class="pure-u-1-3">
                    <a href="{{ path('app_npcgenerator_ali', {title: form.vars.data.title}) }}" class="pure-button">
                        <i class="icon-ali"></i>                       
                        une IAL ?
                    </a>
                </div>
                <div class="pure-u-1-3">
                    <a href="{{ path('app_npcgenerator_create', {title: form.vars.data.title}) }}" class="pure-button">
                        <i class="icon-user-plus"></i>
                        un Transhumain ?
                    </a>
                </div>
                <div class="pure-u-1-3">
                    <a href="{{ path('app_placecrud_create', {title: form.vars.data.title}) }}" class="pure-button">
                        <i class="icon-place"></i>
                        un Décor ?
                    </a>
                </div>
            </div>
        </section>
    {% endif %}
    <section>
        {{ form(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ include('fragment/init_autocomplete.html.twig', {element_id:'vertex_content'}) }}
    <script>
        document.getElementById('vertex_title').focus()
    </script>
{% endblock %}