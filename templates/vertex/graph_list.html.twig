{# detail #}
{% macro print_group(icon, group) %}
    <h2><i class="icon-{{ icon }}"></i></h2>
    <ul class="link-list">
        {% for item in group %}
            <li>
                <a href="{{ path('app_wiki', {title:item}) }}">{{ item }}</a>
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

<style>
    .link-list {
        list-style-type: none;
        list-style-position: inside;
        margin: 0;
        padding: 0;
        line-height: 150%;
    }
</style>

{% if network.vertex is defined %}
    {{ _self.print_group('video', network.vertex) }}
{% endif %}
{% if network.transhuman is defined %}
    {{ _self.print_group('extra', network.transhuman) }}
{% endif %}

