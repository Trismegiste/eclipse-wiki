{% extends "base.html.twig" %}

{% block title %}{{ vertex.title }}{% endblock %}

{% block header_title %}
    <nav style="float: right">
        {{ include('vertex/actions.html.twig') }}
    </nav>   
    {{ vertex.title }}
{% endblock %}

{% block content %}
    {{ wiki(vertex.content) }}
    <nav>
        {% for title in backlinks %}
            <a href="{{ path('app_wiki', {title:title}) }}"><i class="icon-link"></i> {{ title }}</a>
        {% endfor %}
    </nav>
{% endblock %}