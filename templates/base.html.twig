<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Eclipse Savage{% endblock %}</title>
        <link  rel="stylesheet" href="{{ asset('purecss/pure-min.css') }}"/> 
        <link  rel="stylesheet" href="{{ asset('css/form.css') }}"/> 
        <link  rel="stylesheet" href="{{ asset('css/main.css') }}?{{ random() }}"/> 
        <link  rel="stylesheet" href="{{ asset('fontello/css/fontello.css') }}"/> 
        <link  rel="stylesheet" href="{{ asset('fontello/css/animation.css') }}"/> 
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <h1 class="big-title">{% block header_title %}{% endblock %}</h1>
            <div class="pure-g">
                <div class="pure-u-1-5">
                    {% block sidebar %}
                        <nav class="pure-menu">
                            <span class="pure-menu-heading">Eclipse Savage</span>
                            <ul class="pure-menu-list">
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_gmhelper_loveletter') }}" class="pure-menu-link">Love letter</a>
                                </li>
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_npcgenerator_list') }}" class="pure-menu-link">Liste PNJ</a>
                                </li>
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_npcgenerator_create') }}" class="pure-menu-link">Cr√©er un PNJ</a>
                                </li>
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_dump_edge') }}" class="pure-menu-link">Tableau Atouts</a>
                                </li>
                            </ul>
                        </nav>
                        <section class="info">
                            {% block info %}{% endblock %}
                        </section>
                    {% endblock %}
                </div>
                <div class="pure-u-4-5">
                    <article>
                        {% block content %}{% endblock %}
                    </article>
                </div>
            </div>
        {% endblock %}
        <script defer src="{{ asset('alpine/cdn.min.js') }}"></script>
        <script src="{{ asset('js/DicePool.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
