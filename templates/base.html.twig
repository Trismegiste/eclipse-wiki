<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Eclipse Savage{% endblock %}</title>
        <link  rel="stylesheet" href="{{ asset('purecss/pure-min.css') }}"/> 
        <link  rel="stylesheet" href="{{ asset('css/form.css') }}"/> 
        <link  rel="stylesheet" href="{{ asset('css/main.css') }}?{{ random() }}"/> 
        <link  rel="stylesheet" href="{{ asset('fontello/css/fontello.css') }}"/> 
        <link  rel="stylesheet" href="{{ asset('fontello/css/animation.css') }}"/> 
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <h1 class="big-title">{% block header_title %}{% endblock %}</h1>
            <div class="pure-g">
                <aside class="pure-u-1-6">
                    {% block sidebar %}
                        <nav class="pure-menu">
                            <span class="pure-menu-heading">
                                <i class="icon-menu"></i>
                                Eclipse Savage
                            </span>
                            <ul class="pure-menu-list">
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_gmhelper_loveletter') }}" class="pure-menu-link">
                                        <i class="icon-heartbeat"></i>
                                        Love letter
                                    </a>
                                </li>
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_npcgenerator_list') }}" class="pure-menu-link">
                                        <i class="icon-list"></i>
                                        Liste PNJ
                                    </a>
                                </li>
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_npcgenerator_create') }}" class="pure-menu-link">
                                        <i class="icon-user-plus"></i>
                                        Cr√©er un PNJ
                                    </a>
                                </li>
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_dump_edge') }}" class="pure-menu-link">
                                        <i class="icon-database"></i>
                                        Tableau Atouts
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <section class="info">
                            {% block info %}{% endblock %}
                        </section>
                    {% endblock %}
                </aside>
                <div class="pure-u-5-6">
                    <article>
                        {% block content %}{% endblock %}
                    </article>
                </div>
            </div>
        {% endblock %}
        <script defer src="{{ asset('alpine/cdn.min.js') }}"></script>
        <script src="{{ asset('js/DicePool.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
