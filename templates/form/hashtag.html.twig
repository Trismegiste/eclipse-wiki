{# Custom rendering for HashtagType #}
{% block hashtag_widget %}
    {% set idButton = id ~ '_import' %}
    <div class="pure-g">
        <div class="pure-u-2-3">{{ form_widget(form, {attr: {class: 'pure-input-1'}}) }}</div>
        <div class="pure-u-1-3"><a class="pure-button pure-input-1" id="{{ idButton }}" style="height:3.45em; padding-top: 1.2em">Import</a></div>
        <script>
            document.getElementById('{{ idButton }}').addEventListener('click', function (e) {
                let widget = document.getElementById('{{ id }}')
                widget.value = '{{ form.vars.hashtag }}'
            })
        </script>
    </div>
{% endblock %}