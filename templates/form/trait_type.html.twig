{# Custom rendering for AttributeType #}
{% block sa_wo_trait_row %}
    <div class="pure-g">
        <div class="pure-u-1 pure-u-xl-1-4 form-label"><label>{{ form.vars.data.name }}</label></div>
        <div class="pure-u-1 pure-u-xl-3-4 form-widget">{{ form_widget(form.roll) }}{{ form_widget(form.name) }}</div>
    </div>
{% endblock %}

{# Custom rendering for EdgeType #}
{% block edge_row %}
