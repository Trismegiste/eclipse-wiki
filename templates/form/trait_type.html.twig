        <div class="pure-u-1 pure-u-xl-1-3 form-label"><label>{{ form.vars.data.name }}</label></div>
        <div class="pure-u-1 pure-u-xl-2-3 form-widget">{{ form_widget(form.origin) }}{{ form_widget(form.name) }}</div>
    </div>
{% endblock %}