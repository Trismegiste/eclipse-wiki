{# Search into InvokeAI images #}
{% extends "base.html.twig" %}

{% block title %}InvokeAI Search{% endblock %}
{% block header_title %}{{ block('title') }}{% endblock %}

{% block content %}
    <div x-data="stableDiffusion">
        <section>
            {{ form(form, {attr:{'x-on:submit.prevent': 'search'}}) }}
        </section>
        <h2>Local</h2>
        <section class="pure-g search">
            <template x-for="picture in gallery">
                <div class="pure-u-1-5">
                    <div class="thumbnail">
                        <a href="picture.full" target="_blank" title="picture.prompt">
                            <img src="picture.thumb" class="pure-img"/>
                        </a>
                        <div class="legend" x-text="picture.width"></div>
                    </div>
                </div>
            </template>
        </section>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .search .thumbnail {
            margin-bottom: 1em;
            text-align: center;
        }
        .search img {
            margin: auto;
            max-width: 256px;
            max-height: 256px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script type="module">
        Alpine.data('stableDiffusion', () => ({
                query: null,
                gallery: [],
                search(event) {
                    fetch('/invokeai/ajax/search?q=' + this.query)
                            .then(resp => {
                                return resp.json()
                            })
                            .then(data => {
                                this.gallery = data
                            })
                }
            }))
    </script>
{% endblock %}
