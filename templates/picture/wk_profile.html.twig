{# canvas for Social Network Profile #}
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{ absolute_url(asset('purecss/pure-min.css')) }}"/>
        <style>
            @font-face {
                font-family: 'OpenSansCondensed';
                src: url(data:font/truetype;charset=utf-8;base64,{{ font }});
            }
            body {
                width: {{ width }}px;
                margin: 0;
                padding: 0;
                background-color: #f0f0f0;
            }
            .avatar {
                width: 100%;
                margin: 0 0 20px;
            }
            h1 {
                font-family: 'OpenSansCondensed';
                font-size: 50px;
                margin: 0;
                padding: 0 0.4em;
            }
            .follow figure {
                margin: 10px 20px 0 0;
            }
        </style>
    </head>
    <body>
        <img src="data:image/png;base64,{{ profile_pic }}" class="avatar"/>
        <div class="pure-g">
            <div class="pure-u-2-3">
                <h1>{{ npc.title }}</h1>
            </div>
            <div class="pure-u-1-3 follow">
                <figure>
                    <img src="{{ absolute_url(asset('socnet/follow.svg')) }}" class="pure-img"/>
                </figure>
            </div>
        </div>
    </body>
</html>