{% extends "base.html.twig" %}

{% block title %}{{ vertex.title }}{% endblock %}

{% block header_title %}
    <nav style="float: right">
        {{ include('place/actions.html.twig') }}
    </nav>   
    {{ block('title') }}
{% endblock %}

{% block content %}
    <table class="pure-table pure-table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Tuile</th>
                <th>Pi√®ces</th>
                <th>Hexagones</th>
                <th>PNJ</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            {% for key, value in stats %}
                <tr>
                    <th>{{ key }}</th>
                    <th>{{ render_tile('habitat', key, 32) }}</th>
                    <td>{{ value.rooms }}</td>
                    <td>{{ value.hexagons }}</td>
                    <td>{{ value.npcTitle }}</td>
                    <td>
                        {% if value.npcTitle is not empty %}
                            {{ value.npcCount  }} ({{ (100 * value.npcCount / value.hexagons)|round }}%)
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}