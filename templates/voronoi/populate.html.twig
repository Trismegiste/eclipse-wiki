{% extends "voronoi/baseform.html.twig" %}
{% form_theme form _self %}

{% block _form_voronoiParam_row %}
    {{ form_widget(form.tilePopulation) }}
{% endblock %}

{% block _form_voronoiParam_tilePopulation_entry_row %}
    <div class="pure-g tile-form">
        <div class="pure-u-1-8">
            {{ render_tile('habitat', name, 42) }}
        </div>
        <div class="pure-u-7-8">
            1 {{ form_widget(form.npcTitle) }}
            par
            {{ form_widget(form.tilePerNpc, {attr:{class:'pure-input-1-4'}}) }}
            cases
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1-2">
            {{ form(form) }}
        </div>
        <div class="pure-u-1-2">
            {% if form.vars.data.voronoiParam is not empty %}
                <img src="{{ path('app_voronoicrud_generate', {pk: form.vars.data.pk, fog: 0}) }}" class="pure-img"/>
            {% endif %}
        </div>
    </div>
{% endblock %}
