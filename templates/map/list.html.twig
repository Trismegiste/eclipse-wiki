{% extends "base.html.twig" %}
{% block title %}Liste des mod√®les de Battle Map{% endblock %}
{% block header_title %}{{ block('title') }}{% endblock %}

{% block content %}
    <div class="pure-g list-battlemap">
        {% for map in template %}
            <div class="pure-u-1-5">
                <a href="{{ path('app_mapcrud_create', {model:map.recipe }) }}?prefill={{ map.key }}">
                    {{ map|raw }}
                </a> 
                <h2>{{ map.title }}</h2>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .list-battlemap h2 {
            text-align: center;
            text-transform: uppercase;
            margin-top: 0;
        }
        .list-battlemap a {
            margin: 0 1em;
            display: block;
        }
    </style>
{% endblock %}
