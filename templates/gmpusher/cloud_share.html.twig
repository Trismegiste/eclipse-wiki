{# Pushing a dynamic document #}
{% extends "gmpusher/share_qrcode.html.twig" %}

{% block title %}Partage par le Cloud{% endblock %}
{% block header_title %}{{ block('title') }} de {{ document.label }}{% endblock %}

{% block sharing_selection %}
    <figure>
        <img src="{{ asset('img/cloud-upload.svg') }}"/>
    </figure>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        figure {
            height: 100%;
        }
        figure img {
            width: 80%;
            opacity: 10%;
            margin: auto;
            vertical-align: middle;
            height: 100%;
        }
    </style>
{% endblock %}