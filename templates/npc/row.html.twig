<div class="pure-g">
    <div class="pure-u-1-4 pure-u-xl-1-12 thumb">
        <i class="{{ vertex_icon(item) }} {% if item.archived %}archived{% endif %}"></i>
    </div>
    <div class="pure-u-3-4 pure-u-xl-1-2">
        <a href="{{ path('app_vertexcrud_show', {pk: item.pk}) }}" class="block-link">
            <h2>{{ item.title }}</h2>
            <span>{{ item.description }}. Morphe: {{ item.morph.title }} ({{ item.powerIndex }})</span>
        </a>
    </div>
    <div class="pure-u-1 pure-u-xl-5-12">
        <nav class="listing-action">
            {{ include('npc/actions.html.twig', {npc:item}) }}
        </nav>
    </div>
</div>
