{% extends "base.html.twig" %}
{% form_theme form _self %}

{% block title %}Création d'un Synopsis{% endblock %}

{% block header_title %}{{ block('title') }}{% endblock %}

{% block content %}
    {{ form(form) }}
{% endblock %}

{% block _synopsis_pitch_row %}
    <h2>Pitch</h2>
    {{ form_widget(form) }}
    <button class="pure-button" x-bind:disabled="!scenario.pitch" x-on:click.prevent="generate">
        Générer le prochain champ vide
    </button>
    <button class="pure-button" x-bind:disabled="!scenario.pitch" x-on:click.prevent="save">Sauver en local</button>
    <button class="pure-button" x-bind:disabled="!!scenario.pitch" x-on:click.prevent="load">Charger en local</button>
    <button class="pure-button" x-bind:disabled="!scenario.pitch" x-on:click.prevent="totalCreation">Effacer et tout générer à partir du pitch</button>
{% endblock %}

{% block _synopsis_title_row %}
    <h2>
        Title
        <button class="pure-button" x-bind:disabled="!scenario.story" x-on:click.prevent="inferTitle"><i class="icon-spin3"></i></button>
    </h2>
    <input class="pure-input-1" x-model="scenario.title" type="text" name="{{ form.vars.full_name }}" required/>
{% endblock %}

{% block _synopsis_story_row %}
    <h2>
        Développement
        <button class="pure-button" x-on:click.prevent="scenario.story=''; generate()"><i class="icon-spin3"></i></button>
    </h2>
    {{ form_widget(form) }}
{% endblock %}

{% block _synopsis_act_row %}
    <template x-for="idx in [1,2,3,4,5]">
        <section>
            <h2>
                <span x-text="'Acte ' + idx"></span>
                <button class="pure-button" x-on:click.prevent="scenario['act' + idx]=''; generate()"><i class="icon-spin3"></i></button>
            </h2>
            {{ form_widget(form.vars.prototype, {attr: {
                'x-bind:name' : "'" ~ form.vars.prototype.vars.full_name ~ "'.replace('__name__', idx)",
                'x-model' : "scenario['act' + idx]"
            }}) }}
        </section>
    </template>
{% endblock %}

{% block _synopsis_widget %}
    <div class="pure-g">
        <div class="pure-u-4-5">
            <fieldset>
                {{ form_row(form.pitch) }}
                {{ form_row(form.story) }}
                {{ form_row(form.act) }}
                {{ form_row(form.create) }}
            </fieldset>
        </div>
        <aside class="pure-u-1-5">
            <fieldset>
                {{ form_row(form.title) }}
            </fieldset>
        </aside>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .pure-u-4-5 > fieldset {
            margin-right: 2em;
        }
        fieldset > h2:first-child {
            margin-top: 0;
        }
        fieldset h2 .pure-button {
            font-size: 1rem;
            float: right;
        }

        .info {
            position: sticky;
            top: 0.5em;
        }
        .info i {
            font-size: 1000%;
            color: lightgray;
        }
    </style>
{% endblock %}

{% block info %}
    <div x-data="llmState" x-on:llm.window="update">
        <i class="icon-spin3 animate-spin" x-show="running"></i>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="application/json" id="init-payload">
        {{ form.vars.default_payload|json_encode()|raw }}
    </script>
    <script type="module">
        import * as spa from 'dramatron/spa';

        spa.setDefaultPayload(JSON.parse(document.getElementById('init-payload').textContent))
        Alpine.data('dramatron', spa.factory)
    </script>
    <script type="module">
        Alpine.data('llmState', () => ({
                running: false,

                update(event) {
                    this.running = event.detail.running
                }
            }))
    </script>
{% endblock %}
